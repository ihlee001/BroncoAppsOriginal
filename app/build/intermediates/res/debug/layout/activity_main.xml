        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bronco_logo"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/bronco"
        android:layout_above="@+id/broncotext" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Bronco"
    android:id="@+id/broncotext"
    android:background="#00ff8c16"
    android:textColorHighlight="#ff000000"
    android:textColor="#ffffb617"
    android:textSize="40dp"
    android:textStyle="bold|italic"
    android:textIsSelectable="false"
    android:layout_above="@+id/map_button"
    android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Maps"
        android:id="@+id/maptext"
        android:background="#00ff8c16"
        android:textColorHighlight="#ff000000"
        android:textColor="#ffffb617"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/broncotext" />

